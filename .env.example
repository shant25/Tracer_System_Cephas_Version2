# Server Configuration
PORT=5000
HOST=localhost
NODE_ENV=development

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/tracer_app

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=5d
JWT_RESET_SECRET=your_reset_token_secret_here

# Logging
LOG_LEVEL=info

# API Settings
API_PREFIX=/api

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Docker MongoDB Settings
MONGO_USER=root
MONGO_PASSWORD=password
MONGO_DB=tracer_app
MONGO_PORT=27017

# Docker Port Settings
BACKEND_PORT=5000
FRONTEND_PORT=3000
NGINX_PORT=80
NGINX_SSL_PORT=443